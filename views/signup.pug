doctype html
head
  meta(charset='UTF-8')
  meta(http-equiv='X-UA-Compatible' content='IE=edge')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  title  U farm sign up
  link(rel='stylesheet' href='css/formstyle.css')
.container
  form#signup.form(name='')
    h1 Sign Up
    .form-field
      label(for='username') Username:
      input#username(type='text' name='username' autocomplete='off')
      small
    .form-field
      label(for='firstname') First Name:
      input#firstname(type='text' name='firstname' autocomplete='off')
      small
    .form-field
      label(for='phonenumber') Phone Number:
      input#phonenumber(type='text' name='phonenumber' autocomplete='off')
      small
    .form-field
      label(for='email') Email:
      input#email(type='text' name='email' autocomplete='off')
      small
    .form-field
      label(for='password') Password:
      input#password(type='password' name='password' autocomplete='off')
      small
    .form-field
      label(for='confirm-password') Confirm Password:
      input#confirm-password(type='password' name='confirm-password' autocomplete='off')
      small
    .form-field
      input.btn(type='submit' value='Sign Up' onclick='checkUserName(); checkPassword(); checkFirstName()')
script(src='signup.js')
