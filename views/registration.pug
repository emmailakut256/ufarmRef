extends layout
block content
    header.card-header
        //- script(src="js/validations.js")
        // Bootstrap CSS
        link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css' rel='stylesheet' integrity='sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC' crossorigin='anonymous')
        

        h4.card-title Register Agric Officer
                    form(action='/register' id="regForm" name="register" method="POST")
                        div.form-row
                            div.col.form-group
                                label Full Name 
                                input.form-control#fname(name="fullname")
                            div.col.form-group
                                label Email
                                input.form-control#mail(name="email")
                            div.col.form-group
                                label Unique Number
                                input.form-control#uniquenumber(name="uniquenumber")
                        div.form-row
                            div.col.form-group
                                label.form-check.form-check-inline
                                    input.form-check-input#female(type="radio" name="gender" value="female")
                                    span.form-check-label Female 
                                label.form-check.form-check-inline
                                    input.form-check-input#male(type="radio" name="gender" value="male")
                                    span.form-check-label Male 
                            div.col.form-group
                                label Password
                                input.form-control#password(type="password" name="password")
                            div.col.form-group
                                label Role
                                select.form-control(name="role")
                                    option(value="") (Select a role)
                                    option(value="AgricOfficer") Agric Officer
                        div.form-row
                            div.col.form-group
                                button.btn.btn-primary.btn-block( id="submit") Register 
                        div.form-row
                            div.col.form-group
                                a(class='button', href='/login') Login
